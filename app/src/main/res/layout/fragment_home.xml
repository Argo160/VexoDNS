<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <Button
            android:id="@+id/fetch_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fetch_button" />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            tools:visibility="visible" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/result_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardElevation="4dp"
            app:contentPadding="16dp"
            android:visibility="gone"
            tools:visibility="visible">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/username_label"
                    style="@style/LabelStyle"
                    android:text="@string/username_header"
                    app:layout_constraintEnd_toStartOf="@+id/username_text"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/username_text"
                    style="@style/ValueStyle"
                    app:layout_constraintBaseline_toBaselineOf="@id/username_label"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/username_label"
                    tools:text="alpha-1306" />

                <TextView
                    android:id="@+id/status_label"
                    style="@style/LabelStyle"
                    android:layout_marginTop="20dp"
                    android:text="@string/status_header"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/username_label" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/status_chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    app:chipIconTint="@android:color/white"
                    app:layout_constraintBottom_toBottomOf="@id/status_label"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/status_label"
                    tools:chipIcon="@drawable/ic_status_expired"
                    tools:text="Expired" />

                <TextView
                    android:id="@+id/time_label"
                    style="@style/LabelStyle"
                    android:layout_marginTop="20dp"
                    android:text="@string/time_header"
                    app:layout_constraintEnd_toStartOf="@+id/time_text"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/status_label" />

                <TextView
                    android:id="@+id/time_text"
                    style="@style/ValueStyle"
                    app:layout_constraintBaseline_toBaselineOf="@id/time_label"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/time_label"
                    tools:text="0 days and 0 hours" />

                <TextView
                    android:id="@+id/volume_label"
                    style="@style/LabelStyle"
                    android:layout_marginTop="20dp"
                    android:text="@string/volume_header"
                    app:layout_constraintEnd_toStartOf="@+id/volume_text"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/time_label" />

                <TextView
                    android:id="@+id/volume_text"
                    style="@style/ValueStyle"
                    app:layout_constraintBaseline_toBaselineOf="@id/volume_label"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/volume_label"
                    tools:text="Unlimited" />

                <TextView
                    android:id="@+id/last_ip_label"
                    style="@style/LabelStyle"
                    android:layout_marginTop="20dp"
                    android:text="@string/last_ip_label"
                    app:layout_constraintEnd_toStartOf="@+id/last_ip_text"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/volume_label" />

                <TextView
                    android:id="@+id/last_ip_text"
                    style="@style/ValueStyle"
                    app:layout_constraintBaseline_toBaselineOf="@id/last_ip_label"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/last_ip_label"
                    tools:text="192.168.1.1" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/status_bar_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:padding="8dp"
            tools:text="@string/ip_update_success" />
        <Spinner
            android:id="@+id/dns_type_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:background="@drawable/spinner_background"
            android:entries="@array/dns_types"
            android:paddingStart="12dp"
            android:paddingTop="12dp"
            android:paddingEnd="36dp"
            android:paddingBottom="12dp" />
        <LinearLayout
            android:id="@+id/connect_button_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/connect_button_layout"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/button_background_disconnected"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_power"
                    app:tint="@android:color/white" />
            </FrameLayout>

            <TextView
                android:id="@+id/connect_status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/status_not_connected"
                android:textAppearance="?attr/textAppearanceHeadline6" />

        </LinearLayout>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/timer_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        tools:visibility="visible">

        <ProgressBar
            android:id="@+id/circular_progress_bar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:indeterminate="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/timer_text_overlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/circular_progress_bar"
            app:layout_constraintEnd_toEndOf="@id/circular_progress_bar"
            app:layout_constraintStart_toStartOf="@id/circular_progress_bar"
            app:layout_constraintTop_toTopOf="@id/circular_progress_bar"
            tools:text="55" />

        <TextView
            android:id="@+id/timer_message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@android:color/white"
            android:text="@string/timer_text_title"
            app:layout_constraintTop_toBottomOf="@id/circular_progress_bar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>